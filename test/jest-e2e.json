{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "@src/(.*)": [
      "<rootDir>/src/$1"
    ],
    "@config/(.*)": [
      "<rootDir>/src/config/$1"
    ]
  },
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
